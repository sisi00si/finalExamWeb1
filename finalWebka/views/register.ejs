<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
   
<style>
  body {
            background-color: #365486;
            margin: 0; 
            padding: 0; 
            font-family: Arial, sans-serif; 
            color: #11235A; 
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8); 
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }
    </style>
  
  <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
    <div class="row gx-lg-5 align-items-center mb-5">
        <div class="col-lg-6 mb-5 mb-lg-0" >
            <h1 class="my-5 display-5 fw-bold ls-tight" style="color:#ffffff">
                Welcome to <br />
                <span style="color: #0F1035">AITU merch store</span>
            </h1>
            <p class="mb-4 opacity-70" style="color: #B4D4FF">
                Feel free to join our community and become a real AITU student!
            </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
            <div class="card bg-glass login-container">
                <div class="card-body px-4 py-5 px-md-5">
                    <form action="/register" method="POST">
                        <div class="row">
                            <h1>Register</h1>
                        <div class="col-md-12 mb-4">
                    </div>
                </div>
  
                <!-- Username input -->
                 <div class="form-outline mb-4">
                    <label class="form-label" >Username</label>
                      <input type="text" name="username" class="form-control" />
                 </div>
                 
            

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label">Password</label>
                  <input type="password" name="password" class="form-control" />
                </div>

                <!-- First Name input -->
                <div class="form-outline mb-4">
                    <label class="form-label">First Name</label>
                  <input type="text" name="firstName" class="form-control" />
                </div>

                <!-- Last Name input -->
                <div class="form-outline mb-4">
                    <label class="form-label">Last Name</label>
                  <input type="text" name="lastName" class="form-control" />
                </div>

                <!-- Age input -->
                <div class="form-outline mb-4">
                    <label class="form-label">Age</label>
                  <input type="number" name="age" class="form-control" min="1" max="100" />
                </div>

                <!-- Country input -->
                <!-- Country input -->
                 <div class="form-outline mb-4">
                 <label class="form-label">Country</label>
                 <select class="form-select" name="country" required>
                      <option value="">Select Country</option>
                      <% countries.forEach(country => { %>
                          <option value="<%= country.code %>"><%= country.name %></option>
                      <% }); %>
                </select>
                </div>


                <!-- Gender input -->
                <div class="form-outline mb-4">
                    <label class="form-label">Gender</label>
                    <select class="form-select" name="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">
                  Sign up
                </button>
  
                <!-- Register buttons -->
                <div class="text-center">
                  <p>Join AITU merch by <a href="/login">Login</a></p>
                
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  

</body>
</html>
